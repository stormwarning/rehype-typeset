{
	"name": "rehype-typeset",
	"version": "0.1.0",
	"description": "Process HTML for better web typography.",
	"keywords": [
		"remark-plugin",
		"typeset",
		"typography"
	],
	"repository": "stormwarning/rehype-typeset",
	"license": "ISC",
	"author": "Jeff (https://tidaltheory.io)",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"default": "./plugin.js",
			"types": "./plugin.d.ts"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"plugin.d.ts",
		"plugin.js",
		"CHANGELOG.md",
		"LICENSE.txt",
		"README.md"
	],
	"scripts": {
		"build": "tsc plugin.js --declaration --allowJs --emitDeclarationOnly",
		"changeset": "changeset add",
		"prepack": "pnpm run build",
		"prepare": "npx simple-git-hooks",
		"release": "changeset publish",
		"test": "node --test"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{js,cjs,mjs,ts}": [
			"eslint --fix",
			"prettier --write"
		],
		"package.json": "prettier --write"
	},
	"prettier": "@zazen/prettier-config",
	"dependencies": {
		"hast-util-to-string": "3.0.1",
		"unist-util-visit": "5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.7",
		"@types/hast": "3.0.4",
		"@types/node": "24.5.2",
		"@zazen/changesets-changelog": "2.0.3",
		"@zazen/eslint-config": "7.3.0",
		"@zazen/prettier-config": "1.1.3",
		"eslint": "9.35.0",
		"lint-staged": "16.1.6",
		"prettier": "3.6.2",
		"rehype": "13.0.2",
		"simple-git-hooks": "2.13.1",
		"typescript": "5.9.2"
	},
	"packageManager": "pnpm@10.7.1"
}
